{
  "name": "@apps/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test:setup": "pnpm --filter @packages/database db:migrate && pnpm --filter @packages/database db:seed",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "hono": "catalog:",
    "@hono/node-server": "catalog:",
    "@hono/zod-validator": "catalog:",
    "@packages/database": "workspace:*",
    "@packages/shared-types": "workspace:*",
    "@packages/shared-utils": "workspace:*",
    "@packages/firebase-auth-server": "workspace:*",
    "dotenv": "catalog:",
    "firebase": "catalog:",
    "firebase-admin": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "@vitest/ui": "catalog:"
  }
}
