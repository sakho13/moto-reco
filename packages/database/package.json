{
  "name": "@packages/database",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "db:generate": "dotenv -e .env.local -- prisma generate",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:deploy": "dotenv -e .env.local -- prisma migrate deploy",
    "db:seed": "dotenv -e .env.local -- tsx prisma/seed.ts"
  },
  "devDependencies": {
    "@types/pg": "8.15.6",
    "prisma": "7.0.0",
    "prisma-json-schema-generator": "^5.1.5",
    "tsx": "catalog:"
  },
  "dependencies": {
    "@prisma/adapter-pg": "7.0.0",
    "@prisma/client": "7.0.0",
    "dotenv": "catalog:",
    "pg": "8.16.3"
  },
  "exports": {
    ".": "./src/index.ts",
    "./json-schema": "./prisma/json-schema/json-schema.json"
  }
}
