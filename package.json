{
  "name": "motoreco",
  "private": true,
  "scripts": {
    "build": "dotenv -- turbo run build",
    "dev": "dotenv -e .env.local -- turbo run dev",
    "dev:web": "dotenv -e .env.local -- pnpm --filter web dev",
    "dev:mobile": "dotenv -e .env.local -- pnpm --filter mobile dev",
    "dev:api": "dotenv -e .env.local -- pnpm --filter api dev",
    "test": "dotenv -e .env.local -- turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "catalog:",
    "turbo": "2.6.1",
    "typescript": "catalog:",
    "dotenv": "catalog:",
    "dotenv-cli": "catalog:"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=18"
  }
}
